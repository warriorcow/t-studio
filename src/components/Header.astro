---
import { Image } from 'astro:assets';
import LogoImage from '../assets/logo.svg';
import HamburgerImage from '../assets/hamburger.svg';
import Button from './UI/Button.astro';
import Container from './UI/Container.astro';

interface Props {
  menu_list: {
    href: string;
    text: string;
  }[];
}

const { menu_list } = Astro.props;
---

<header class="header">
  <Container class="header__container">
    <div class="header__logo">
      <Image
          src={LogoImage}
          alt="T-Studio Logo"
      />
    </div>
    <div class="header__side">
      <nav class="header__nav">
        {
          menu_list.map(menu =>
              <a class="header__link" href={menu.href}>{menu.text}</a>
          )
        }
        <Button
            class="header__button"
            text="Оценить проект"
        />
      </nav>
      <div class="header__contacts">
        <a href="mailto:email@mail.ru">email@mail.ru</a>
        <a href="tel:+7(999)999-99-99">+7(999)999-99-99</a>
      </div>
    </div>

    <div class="header__hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </Container>
</header>

<style is:global lang="scss">
  .header {
    width: 100%;
    padding: 18px 0;
    position: fixed;
    top: 0;
    left: 0;
    background-color: $secondary;
    z-index: 10;

    @include media(md) {
      padding: 11.5px 0;
    }

    &__container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    &__logo {
      width: 185px;
      height: 42px;

      @include media(md) {
        width: 100px;
        height: 23px;
      }
    }

    &__side {
      display: flex;
      align-items: center;
      gap: 0 44px;

      @include media(md) {
        position: fixed;
        top: $header_height_mobile;
        width: 100%;
        height: calc(100dvh - $header_height_mobile);
        background-color: $secondary;
        flex-direction: column;
        justify-content: center;
        transform: translateX(0);
        right: -100%;
        transition: transform 0.3s cubic-bezier(0.25, 1, 0.5, 1);

        &.open {
          transform: translateX(-100%);
        }
      }
    }

    &__contacts {
      @include MontserratMedium13;

      display: none;
      position: absolute;
      bottom: 30px;
      right: 30px;
      flex-direction: column;
      gap: 10px 0;

      @include media(md) {
        display: flex;
      }

      a {
        color: $primary;
      }
    }

    &__link {
      color: $primary;
    }

    &__nav {
      @include MontserratMedium18;

      display: flex;
      align-items: center;
      gap: 0 44px;

      @include media(md) {
        flex-direction: column;
        margin: 0 auto;
        gap: 30px 0;
      }
    }

    &__button {
      @include media(md) {
        display: none;
      }
    }

    &__hamburger {
      display: none;
      width: 24px;
      height: 16px;
      flex-direction: column;
      justify-content: space-between;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 0;
      position: relative;

      span {
        width: 100%;
        height: 2px;
        background: #333;
        border-radius: 4px;
        transition: all 0.3s cubic-bezier(0.65, 0, 0.35, 1);
      }

      &.open {
        span {
          &:first-child {
            transform: translateY(7px) rotate(45deg);
          }
          &:nth-child(2) {
            opacity: 0;
          }
          &:last-child {
            transform: translateY(-7px) rotate(-45deg);
          }
        }
      }

      @include media(md) {
        display: flex;
      }
    }
  }
</style>

<script>
  (function () {
    const hamburger = document.querySelector('.header__hamburger');
    const sideMenu = document.querySelector('.header__side');
    const links = document.querySelectorAll('.header__link');
    const body = document.body;

    const toggleMenu = () => {
      const isOpen = sideMenu.classList.toggle('open');
      hamburger.classList.toggle('open');
      body.style.overflow = isOpen ? 'hidden' : '';
    };

    // Открытие/закрытие по клику на гамбургер
    hamburger.addEventListener('click', toggleMenu);

    // Отслеживание изменения размера окна
    const mediaQuery = window.matchMedia('(min-width: 960px)');
    const checkScreenSize = () => {
      if (mediaQuery.matches) {
        sideMenu.classList.remove('open');
        hamburger.classList.remove('open');
        body.style.overflow = ''; // Разрешаем скролл на десктопе
      }
    };

    // Вызов при загрузке и при изменении размера окна
    mediaQuery.addEventListener('change', checkScreenSize);
    checkScreenSize();

    links.forEach(link => {
      link.addEventListener('click', () => {
        sideMenu.classList.remove('open');
        hamburger.classList.remove('open');
        body.style.overflow = '';
      });
    })
  })();

</script>