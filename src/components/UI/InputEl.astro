---
interface Props {
  class?: string
  type: boolean
  placeholder?: string
  required?: boolean
}

const {
  class: className,
  type,
  required,
  ...rest
} = Astro.props
---
<label class="input">
  <input
      class:list={["input__el", className]} {...rest}
      type={type}
      required={required}
  >
</label>

<style is:global lang="scss">
  .input {
    width: 100%;

    &__el {
      @include MontserratMedium18;

      width: 100%;
      border: none;
      border-bottom: 1px solid #DADADA;
      padding: 5px;

      &:focus {
        outline: none;
      }

      &::placeholder {
        color: rgba(43, 43, 43, 0.5);
      }
    }

    .just-validate-error-field {
      background-color: #FFE0E0;
      border-color: #FF4D4D;
      color: #FF4D4D;
    }
  }
</style>