---
interface Props {
  tag: string
  text: string
  color?: 'lightblue' | 'gradient' | 'secondary'
  isBlock?: boolean
  hasArrow?: boolean
  arrowPosition?: 'left' | 'right'
}

const {
  tag,
  text,
  gradient,
  color,
  isBlock,
  hasArrow,
  arrowPosition = 'left'
} = Astro.props;

const Element = tag;
---

<Element class:list={['title', color && `title--${color}`, isBlock && `title--block`, hasArrow && `title--arrow`, arrowPosition && `title--arrow-${arrowPosition}`]}>
  {text}
</Element>

<style is:global lang="scss">
  .title {
    @include UnboundedRegular68;

    color: $primary;

    &--arrow {
      &::before {
        content: '';
        display: inline-flex;
        width: 126px;
        min-width: 126px;
        height: 55px;
        mask: url("../../assets/arrow-big.svg");
        margin-right: 42px;
        background-color: $primary;
      }

      &-right {
        &::before {
          display: none;
        }

        &::after {
          position: relative;
          content: '';
          display: inline-flex;
          width: 126px;
          min-width: 126px;
          height: 55px;
          mask: url("../../assets/arrow-big.svg");
          margin-left: 42px;
          top: 8px;
          background-color: $primary;
        }
      }
    }

    &--block {
      display: flex;

      &::before {
        margin-top: 15px;
      }
    }

    &--lightblue {
      background: #6DE8DD;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;

      &::before, &::after {
        background-color: #6DE8DD;
      }
    }

    &--secondary {
      color: $secondary;
      background: $secondary;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;

      &::before, &::after {
        background-color: $secondary;
      }
    }

    &--gradient {
      background: linear-gradient(270deg, #6DE8DD 0%, #3F65FF 70.78%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;

      &::before, &::after {
        background-color: #3F65FF;
      }
    }
  }
</style>