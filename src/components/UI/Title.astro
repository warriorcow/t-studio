---
interface Props {
  tag: string
  text: string
  color?: 'lightblue' | 'gradient'
  isBlock?: boolean
}

const {
  tag,
  text,
  gradient,
  color,
  isBlock
} = Astro.props;

const Element = tag;
---

<Element class:list={['title', color && `title--${color}`, isBlock && `title--block`]}>
  {text}
</Element>

<style is:global lang="scss">
  .title {
    @include UnboundedRegular68;

    color: $primary;

    &::before {
      content: '';
      display: inline-flex;
      width: 126px;
      min-width: 126px;
      height: 55px;
      mask: url("../../assets/arrow-big.svg");
      margin-right: 42px;
      background-color: $primary;
    }

    &--block {
      display: flex;

      &::before {
        margin-top: 15px;
      }
    }

    &--lightblue {
      background: #6DE8DD;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;

      &::before {
        background-color: #6DE8DD;
      }
    }

    &--gradient {
      background: linear-gradient(270deg, #6DE8DD 0%, #3F65FF 70.78%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;

      &::before {
        background-color: #3F65FF;
      }
    }
  }
</style>